    <!--<location>/common/500.jsp</location>-->
    <!--</error-page>-->

    <!-- 设置欢迎页面 -->
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>



</web-app>